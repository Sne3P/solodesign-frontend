{
  "name": "portolio",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "analyze": "cross-env ANALYZE=true next build",
    "seo:validate": "node scripts/seo-validation.js",
    "clean:console": "node scripts/clean-console-logs.js",
    "clean:imports": "node scripts/clean-unused-imports.js",
    "clean:all": "npm run clean:console && npm run clean:imports && npm run lint:fix",
    "security:check": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "audit": "npm run lint && npm run seo:validate && npm run security:check && echo 'Audit complet terminÃ© !'",
    "audit:full": "node scripts/full-audit.js",
    "audit:complete": "npm run clean:all && npm run audit:full",
    "docker:build": "docker build -t solodesign .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:prod": "npm run build && npm run docker:build"
  },
  "dependencies": {
    "sharp": "^0.33.3",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.9",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.453.0",
    "multer": "^2.0.2",
    "next": "^14.2.31",
    "nodemailer": "^6.10.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.54.2",
    "react-scroll": "^1.9.0",
    "react-scroll-parallax": "^3.4.5",
  "tailwind-merge": "^2.5.4",
  "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
