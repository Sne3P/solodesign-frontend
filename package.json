{
  "name": "solodesign-frontend",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "SoloDesign - Portfolio & Agence Web moderne avec Next.js 15",
  "author": "SoloDesign",
  "homepage": "https://solodesign.fr",
  "scripts": {
    "dev": "cross-env NODE_ENV=development next dev --turbo",
    "dev:debug": "cross-env NODE_ENV=development NODE_OPTIONS='--inspect' next dev --turbo",
    "dev:clean": "npm run clean:cache && npm run dev",
    "build": "cross-env NODE_ENV=production next build",
    "build:analyze": "cross-env ANALYZE=true NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "clean:cache": "rimraf .next node_modules/.cache",
    "clean:console": "node scripts/clean-console-logs.js",
    "clean:all": "npm run clean:cache && npm run clean:console && npm run lint:fix",
    "seo:validate": "node scripts/seo-validation.js",
    "security:check": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "audit": "npm run type-check && npm run lint && npm run seo:validate && npm run security:check",
    "validate:final": "node scripts/final-validation.js",
    "optimize:images": "node scripts/optimize-images.js",
    "docker:build": "docker build -t solodesign .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:prod": "npm run build && npm run docker:build",
    "postinstall": "npm run clean:cache"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.24",
    "framer-motion": "^11.18.2",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.453.0",
    "multer": "^2.0.2",
    "next": "^15.5.0",
    "nodemailer": "^6.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-scroll": "^1.9.3",
    "react-scroll-parallax": "^3.4.5",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^6.4.19",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.5.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=8.0.0"
  }
}
