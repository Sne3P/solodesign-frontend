{
  "name": "solodesign-frontend",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "SoloDesign - Portfolio & Agence Web Moderne avec Next.js 14",
  "author": "SoloDesign",
  "homepage": "https://solodesign.fr",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "analyze": "cross-env ANALYZE=true next build",
    "seo:validate": "node scripts/seo-validation.js",
    "clean:console": "node scripts/clean-console-logs.js",
    "clean:all": "npm run clean:console && npm run lint:fix",
    "security:check": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "audit": "npm run lint && npm run seo:validate && npm run security:check",
    "validate:final": "node scripts/final-validation.js",
    "optimize:images": "node scripts/optimize-images.js",
    "docker:build": "docker build -t solodesign .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:prod": "npm run build && npm run docker:build"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "framer-motion": "^11.11.9",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.453.0",
    "multer": "^2.0.2",
    "next": "^14.2.31",
    "nodemailer": "^6.10.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.54.2",
    "react-scroll": "^1.9.0",
    "react-scroll-parallax": "^3.4.5",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.0",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "^14.2.31",
    "postcss": "^8",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
