# Fichier de variables d'environnement pour le SEO et Analytics
# Remplacez les valeurs par vos vrais codes de suivi

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity
NEXT_PUBLIC_CLARITY_PROJECT_ID=XXXXXXXXXX

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Configuration SEO
NEXT_PUBLIC_SITE_URL=https://solodesign.fr
NEXT_PUBLIC_SITE_NAME=SoloDesign

# Codes de vérification des moteurs de recherche
NEXT_PUBLIC_GOOGLE_VERIFICATION=votre_code_google_verification
NEXT_PUBLIC_BING_VERIFICATION=votre_code_bing_verification
NEXT_PUBLIC_YANDEX_VERIFICATION=votre_code_yandex_verification

# Email / SMTP (utilisé route /api/send-email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=contact@solodesign.fr
EMAIL_PASS=motdepasse_application

# (Optionnel futur) Base de données (actuellement non utilisée)
# DATABASE_URL=postgresql://user:password@localhost:5432/solodesign

# Clé secrète pour JWT et authentification
JWT_SECRET=change_me_ultra_long_random_64_chars
ADMIN_PASSWORD_HASH=$2b$12$hash_bcrypt_admin

# Configuration de production
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# Logging / Monitoring optionnel
LOG_LEVEL=info
SENTRY_DSN=
LOG_TO_FILE=false

# (Optionnel futur) Cloudinary
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Domaines autorisés CORS
ALLOWED_ORIGINS=https://solodesign.fr,https://www.solodesign.fr
